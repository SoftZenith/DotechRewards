@{
    ViewBag.Title = "Admin";
    string user = "";
    int adminFlg = -1;
    try
    {
        user = HttpContext.Current.Session["nombre"].ToString();
        adminFlg = Convert.ToInt32(HttpContext.Current.Session["admin"].ToString());
    }
    catch (Exception ex)
    {
        { Response.Redirect("~/"); }
    }
    finally {
        if (adminFlg != 1) {
            { Response.Redirect("~/Usuario"); }
        }
    }
}

