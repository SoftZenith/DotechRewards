        <div class="col-5" style="display: flex; flex-direction: column; justify-content: space-between; align-items:center;"> <!--margin-top:20px; font-family:sans-serif;-->
            <h2 style="width:100%;">Actualmente cuentas con:</h2>
            <div>
                <span style="font-size: 4em; font-weight:700;">@bannerP.puntos</span><span style="font-size:1em; font-weight:700;">Puntos</span>
            </div>
            <a class="" target="_blank" href="@pathCatalogoH" style="color: black; font-size:1.5em;">Canjea tus puntos</a>
        </div>



        <div class="col-7" style="display:flex; flex-direction:column; justify-content:space-between;">
            <div class="form-group" style="display:none;">
                <!--		Show Numbers Of Rows 		-->
                <select class="form-control" name="state" id="maxRows" style="display: none;">
                    <option value="5000">Show ALL Rows</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                </select>
            </div>

            <table class="table table-striped table-class" id="table-id">

                @if (bannerP.estatus == 0)
                {
                    <tr>
                        <td width="100%" style="text-align: center; font-size: 30px; color:gray">Para activar tu puntos de bienvenida <a href="@Url.Action("activarPuntos", "Usuario", new { usuario = idUsr })">haz click aquí</a></td>
                    </tr>
                }
                else
                {
                    float events = bannerP.eventos.Count;
                    for (int i = 0; i < 3; i++)
                    {
                        double vars = (events / 4.0);
                        if (vars % 1 == 0)
                        {
                            break;
                        }
                        else
                        {
                            events++;
                            bannerP.eventos.Add(new Evento("", "", 0));
                        }
                    }
                    <tr style="color:gray!important; border-top: 2px solid #d4d4d4!important;">
                        <th>Fecha</th>
                        <th>Actividad</th>
                        <th>Puntos</th>
                    </tr>
                    foreach (Evento evento in bannerP.eventos)
                    {
                        <tr>
                            <td style="text-align: center;">@evento.fecha</td>
                            <td style="text-align: center;">@evento.nombre</td>
                            <td style="text-align: center;">@evento.puntos</td>
                        </tr>
                    }
                }
            </table>

            <!--		Start Pagination -->
            @if (bannerP.estatus > 0)
            {
                <div style="width:100%; border-bottom: 1px solid #d4d4d4;">
                    <nav style="display:inline-block; width:135px;">
                        <ul class="pagination" style="margin-bottom:0.5rem;">
                            <li data-page="prev" class="page-header">
                                <span class="border-right"> < <span class="sr-only">(current)</span></span>
                            </li>

                            <li data-page="next" class="page-item" id="prev">
                                <span> > <span class="sr-only">(current)</span></span>
                            </li>
                        </ul>
                    </nav>

                    <div style="display:inline-block; float:right; width: 125px;">

                        <b style="float: right; margin-right: 51px;">Total: @bannerP.puntos</b>

                    </div>
                </div>
            }

            @if (bannerP.estatus > 0) { 
                <script type="text/javascript">
                    getPagination('#table-id');
                </script>
            }

        </div>
    </div>
