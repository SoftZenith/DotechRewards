                //$('#selectedclick').append('<option value="' + json[i].idUsuario + '">' + json[i].nombre + '</option>');
                listaInvitados.push(json[i].nombre);
            }
        }).done(function () {
            $('#txtInvitado').autocomplete({
                source: listaInvitados,
                messages: {
                    noResults: '',
                },
